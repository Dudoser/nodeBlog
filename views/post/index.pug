h2 Articles
a(href='/') home
hr
each val in post
    p
        span #{val.image}
        span  |
        span
            a(href='/post/' + val.url) #{val.title}
        span  |
        span #{val.createdAt}
        span  |
        span
            a(href='/user/'+ val.created_by) #{val.user.name}
        span  |
        span
            a(href='/category/'+ val.category.url) #{val.category.title}